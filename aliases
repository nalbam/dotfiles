#!/bin/bash

# Toast CLI shortcuts
alias t='toast'
alias tu='python3 -m pip install --user -U toast-cli'
alias tt='bash -c "$(curl -fsSL nalbam.github.io/dotfiles/run.sh)"'

# Change directory with toast cdw
c() {
  local dir="$(toast cdw $@)"
  if [ -n "$dir" ]; then
    echo "Change directory to $dir"
    cd "$dir"
  fi
}

# Shortcuts for toast commands
alias m='aws sts get-caller-identity --output json | jq .'
