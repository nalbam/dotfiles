# Claude Code 환경변수 설정
# 이 파일을 ~/.claude/.env.local 로 복사 후 값을 설정하세요.

# ntfy.sh 푸시 알림 (https://ntfy.sh)
# iPhone/Apple Watch에서 ntfy 앱 설치 후 토픽 구독
export NTFY_TOPIC=""

# Slack Webhook URL (https://api.slack.com/messaging/webhooks)
export SLACK_WEBHOOK_URL=""

# Pushover (https://pushover.net) - 선택사항
# export PUSHOVER_TOKEN=""
# export PUSHOVER_USER=""

# ESP32 상태 표시 (USB 시리얼 또는 HTTP)
# USB 시리얼 포트 (예: /dev/cu.usbserial-0001, /dev/ttyUSB0)
# ls /dev/cu.* 또는 ls /dev/tty* 로 확인
export ESP32_SERIAL_PORT=""
# HTTP fallback (USB 연결 없을 때 사용)
# export ESP32_HTTP_URL="http://192.168.1.100"
