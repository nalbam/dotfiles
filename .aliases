alias t='toast'
alias tu='bash -c "$(curl -fsSL opspresso.github.io/toast.sh/install.sh)"'
alias tt='bash -c "$(curl -fsSL nalbam.github.io/dotfiles/run.sh)"'

c() {
  local dir="$(toast cdw $@)"
  if [ -n "$dir" ]; then
    echo "$dir"
    cd "$dir"
  fi
}

v() {
  local profile="$(toast av $@)"
  if [ -n "$profile" ]; then
    export AWS_VAULT= && aws-vault exec $profile --
  fi
}

