alias t='toaster'
alias tu='bash -c "$(curl -fsSL opspresso.github.io/toaster/install.sh)"'
alias tt='bash -c "$(curl -fsSL nalbam.github.io/dotfiles/run.sh)"'

alias e='toaster env'
