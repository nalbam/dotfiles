[core]
  untrackedCache = true
  autocrlf = input
  pager =
  precomposeunicode = true
  quotepath = false

[apply]
  whitespace = fix

[branch]
  sort = -committerdate

[color]
  ui = auto

[pull]
  # rebase = true
  ff = only

[push]
  default = simple
  followTags = true

[init]
  defaultBranch = main

