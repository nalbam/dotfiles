{
  "env": {
    "MAX_THINKING_TOKENS": "31999"
  },
  "permissions": {
    "allow": [
      "Bash(awk:*)",
      "Bash(bun:*)",
      "Bash(cat:*)",
      "Bash(chgrp:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(do)",
      "Bash(done)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(for:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ln:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(pnpm:*)",
      "Bash(touch:*)",
      "Bash(tsc:*)",
      "Bash(while read file)",
      "Bash(xargs:*)",
      "Bash(yarn:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:docs.tosspayments.com)",
      "WebFetch(domain:developer.paypal.com)",
      "WebFetch(domain:jestjs.io)",
      "WebSearch"
    ],
    "defaultMode": "acceptEdits"
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccusage statusline",
    "padding": 0
  }
}
